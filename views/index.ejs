<script type="text/javascript" charset="utf-8" async defer>
	const dateToday = document.querySelector('#dateToday');

	const today = new Date();

	let mt = today.getMonth() + 1;
	let dy = today.getDay() + 1;
	let dt = today.getDate();
	let yr = today.getFullYear();

	let month, day, date, year;

	switch (mt) {
		case 1:
			month = 'January';
			break;
		case 2:
			month = 'February';
			break;
		case 3:
			month = 'March';
			break;
		case 4:
			month = 'April';
			break;
		case 5:
			month = 'May';
			break;
		case 6:
			month = 'June';
			break;
		case 7:
			month = 'July';
			break;
		case 8:
			month = 'August';
			break;
		case 9:
			month = 'September';
			break;
		case 10:
			month = 'October';
			break;
		case 11:
			month = 'November';
			break;
		default:
			month = 'December';
			break;
	}

	switch (dy) {
		case 1:
			day = 'Sun';
			break;
		case 2:
			day = 'Mon';
			break;
		case 3:
			day = 'Tue';
			break;
		case 4:
			day = 'Wed';
			break;
		case 5:
			day = 'Thu';
			break;
		case 6:
			day = 'Fri';
			break;
		default:
			day = 'Sat';
			break;
	}

	date = dt; year = yr;

	const result = `"${day}" , ${addZero(date)} ${month} ${year}`;
	dateToday.innerHTML = result;

	function addZero(day) {
		return day <= 9 ? `0${day}` : day;
	}
</script>
